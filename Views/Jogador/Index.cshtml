@model Jogador

@{
    ViewData["Title"] = "Jogador";
}

<!-- MAIN -->
<main>

    <section class="container-grid cadastro-equipes">
        @if (ViewBag.UserName == null)
        {
            <a class="navbar-brand" asp-area="" asp-controller="Login" asp-action="Index">
                Login
            </a>
        }
        else
        {
            <form class="frm-cad-equipe" method="post" action='@Url.Action("Cadastrar")'>
                <div class="cadequipe-titulo">
                    <h1>Cadastro de Jogadores</h1>
                    <hr>
                </div>

                <select class="campo-entrada" name="IdEquipe" id="equipe-select" required>
                    <option value="0">Selecione uma equipe: </option>
                    @foreach (Equipe equipe in ViewBag.Equipe)
                    {
                        <option value="@equipe.IdEquipe">@equipe.NomeEquipe</option>
                    }
                </select>

                <input class="campo-entrada" type="text" name="Nome" id="nome-jogador" placeholder="Digite o nome do Jogador:" required>
                <input class="campo-entrada" type="email" name="Email" id="email-jogador" placeholder="Digite o Email do Jogador:" required>
                <input class="campo-entrada" type="password" name="Senha" id="senha" placeholder="Digite a Senha:" required>

                <button type="submit">Cadastrar</button>
            </form>

            <!-- TABELA CADASTRO DE EQUIPES -->

            <table class="table table-striped table-responsive">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Nome</th>
                        <th>Email</th>
                        <th>Equipe</th>
                        <th>Ações</th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (Jogador jogador in ViewBag.Jogador)
                    {
                        <tr>
                            <td>@jogador.IdJogador</td>
                            <td>@jogador.NomeJogador</td>
                            <td>@jogador.EmailJogador</td>
                            <td>
                                <img src="/img/Equipes/@jogador.Equipe.ImagemEquipe" alt="Imagem da equipe @jogador.Equipe.NomeEquipe" width="50px">
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Excluir" asp-route-id="@jogador.IdJogador"><img class="yellow-trash" src="~/assets/trash.png" alt="Excluir jogador"></a>
                            </td>
                            <td>
                                <a asp-area="" asp-controller="Jogador" asp-action="Editar" asp-route-id="@jogador.IdJogador">Editar</a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        }

    </section>

</main>

